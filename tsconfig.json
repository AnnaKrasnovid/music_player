    // "paths": {
    //   "@/assets/*": ["src/assets/*"],
    //   "@/components/*": ["src/components/*"],      
    //   "@/helpers/*": ["src/helpers/*"],
    //   "@/hooks/*": ["src/hooks/*"],	
    //   "@/pages/*": ["src/pages/*"],	
    //   "@/store/*": ["src/store/*"],	
    //   "@/types/*": ["src/types/*"],	
		// 	"@/UI/*": ["src/UI/*"],
    // }
  },
  "include": [
    "src",
    "./declaration.d.ts"
  ]
}
